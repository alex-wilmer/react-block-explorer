@import 'nib'

global-reset()

body
  font-family 'Raleway', sans-serif

h1
  font-size 2em
  margin 15px 0

.tx + .tx
  margin-top 15px

.tx-feed
  padding 20px
  width 500px

.high-roller
  color #00B300
  font-weight bold
  font-size 1.1em

.satoshis
  float right

.tx
  opacity 1
  transition opacity 0.3s ease

  for num in (1..10)
    .fade-{num}
      opacity (1 - (num / 10))
